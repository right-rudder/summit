---
import privacyPolicies from "../data/privacy-policy";
import BaseLayout from "../layouts/BaseLayout.astro";

const { data } = privacyPolicies;
---

<BaseLayout
  siteTitle="Privacy Policy | Summit Flight Academy"
  siteDescription="Privacy Policy of Summit Flight Academy"
>
  <div class="h-20 lg:h-28 w-full bg-slate-700"></div>

  <section class="mt-12 font-sans flex flex-col items-center">
    <h1
      class="mx-auto text-center text-main-red font-black max-w-4xl text-5xl"
      set:html={data.heading}
    />
    <p class="mx-auto text-center" set:html={data.subheading} />
    <div class="w-4/5 mt-12 lg:w-3/5 py-10">
      {
        data.content.map((part) => (
          <div class="mb-16">
            <h2 class="font-bold text-black tracking-tight uppercase mb-3 text-3xl">
              {part.heading}
            </h2>
            {part.paragraphs.map((paragraph) => (
              <p
                class="mb-3 leading-relaxed text-gray-900 text-justify"
                set:html={paragraph}
              />
            ))}
          </div>
        ))
      }
    </div>
  </section>
</BaseLayout>
