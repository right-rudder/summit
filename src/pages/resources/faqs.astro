---
import HomeLayout from "../../layouts/HomeLayout.astro";
import FAQsTabs from "../../components/FAQsTabs";
import ContactUsModalButton from "../../components/ContactUsModalButton";
---

<HomeLayout
  pageTitle="FAQs | Summit Flight Academy"
  pageDescription="Explore Summit Flight Academy's comprehensive Frequently Asked Questions, addressing common inquiries about our flight training programs. Find detailed answers categorized into General, Private Pilot, Instrument Rating, Pilot + Instrument Bundle, and Commercial Pilot sections. This centralized resource provides clarity on certifications, requirements, processes, and more, ensuring you have the information you need to pursue your aviation goals confidently."
  pageKeywords="flight training FAQ, pilot certification questions, private pilot FAQs, instrument rating FAQs, commercial pilot FAQs, aviation training inquiries, frequently asked questions, common concerns addressed, centralized information resource, clarifying flight school processes"
>
  <!-- Header -->
  <header
    class="relative h-screen-3/4 bg-faqs-header bg-cover bg-center bg-black flex flex-col items-center justify-center"
  >
    <!-- bg-overlay to darken -->
    <div class="absolute bg-black/70 w-full h-full z-0"></div>
    <!-- Text -->
    <div
      class="text-white text-center lg:text-left z-10 flex flex-col items-center gap-4 px-5 h-full lg:pt-28 justify-center"
    >
      <h1 class="text-5xl font-bold tracking-tight">
        Frequently Asked Questions
      </h1>
      <h2 class="text-3xl tracking-wide">
        The answers to your questions all in one place
      </h2>
      <div class="z-50">
        <ContactUsModalButton
          btnSymbol={null}
          btnStyle={"btn-red"}
          btnText={"Contact Us for More Information"}
          client:visible
        />
      </div>
    </div>
  </header>
  <FAQsTabs client:load />
</HomeLayout>
