---
import BaseLayout from "../../layouts/BaseLayout.astro";
import UnderHeader from "../../components/UnderHeader.astro";
import PilotRoadmap from "../../components/PilotRoadmap.astro";
import EnrollNowCTA from "../../components/EnrollNowCTA.astro";
import OurPackages from "../../components/OurPackages.astro";
import FAQs from "../../components/FAQs";
import { privatepilotFAQs } from "../../data/privatePilotFAQs";
import EnrollmentModalButton from "../../components/enrollmentModalButtom";
import ProgramSuggester from "../../components/ProgramSuggester";
import privatePackages from "../../data/privatePackages";

const packages = privatePackages;
---

<BaseLayout
  pageTitle="Private Pilot | Summit Flight Academy"
  pageDescription="Embark on your aviation journey with Summit Flight Academy's private pilot training program. Discover the path to obtaining a coveted private pilot certificate, from medical exams and written tests to practical flight training. Our experienced instructors guide you through each step, ensuring you gain the knowledge and skills to safely operate aircraft for personal or recreational purposes. Start your flight training today and unlock the freedom of the skies."
  pageKeywords="private pilot training, private pilot certificate, how to become a private pilot, flight training program, pilot medical exam, private pilot written exam, private pilot practical exam, pilot certification requirements, aviation training, learn to fly"
>
  <!-- <PageHeader
    title="How to Become a Private Pilot"
    subtitle="The starting point in all pilot journeys"
    headerImg="private-pilot"
    imgPosition="center"
    imgStartOpacity="50"
    imgEndOpacity="20"
    btnText="Apply Now"
    btnHref="/enrollment"
    target="_blank"
    btnColor="white"
  /> -->

  <header
    class="relative h-screen-3/4 bg-private-pilot bg-cover bg-center bg-black flex flex-col items-center justify-center"
  >
    <div
      class="absolute bg-gradient-to-b from-black/60 to-black/20 w-full h-full z-0"
    >
    </div>

    <div
      class="text-white text-center lg:text-left z-10 flex flex-col items-center gap-4 px-5 h-full lg:pt-28 justify-center"
    >
      <h1 class="text-5xl font-bold tracking-tighter">
        How to Become a Private Pilot
      </h1>
      <h2 class="text-3xl tracking-wide">
        The starting point in all pilot journeys
      </h2>
      <EnrollmentModalButton
        client:visible
        btnStyle={"btn-red"}
        btnText={"Apply Today"}
      />
    </div>
  </header>

  <UnderHeader
    title="What is a Private Pilot Certificate?"
    text1=`A private pilot certificate is a coveted achievement for those who dream of taking to the skies. This certification, issued by aviation authorities, opens up a world of possibilities, allowing holders to operate aircraft for personal or recreational purposes. Whether it's soaring above scenic landscapes, visiting distant destinations, or simply indulging in the thrill of flight, a private pilot certificate is the key that unlocks these adventures. At Summit Flight Academy, our experienced instructors are dedicated to helping aspiring pilots earn this essential certification, providing comprehensive training and support throughout the journey.`
  />

  <PilotRoadmap />

  <!-- <OurPackages /> -->

  <ProgramSuggester packages={packages} client:load />

  <EnrollNowCTA />

  <FAQs faqs={privatepilotFAQs} type="Private Pilot" client:visible />

  <!-- <DiscoveryFlightCTA /> -->

  <!-- <ContactUs /> -->
</BaseLayout>
