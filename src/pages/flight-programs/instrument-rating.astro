---
import PageHeader from "../../components/PageHeader.astro";
import DiscoveryFlightCTA from "../../components/DiscoveryFlightCTA.astro";
import ContactUs from "../../components/ContactUs.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import TrainingCourseList from "../../components/TrainingCourseList.jsx";
import UnderHeader from "../../components/UnderHeader.astro";
import InstrumentRoadmap from "../../components/InstrumentRoadmap.astro";
import EnrollNowCTA from "../../components/EnrollNowCTA.astro";
import InstrumentPackages from "../../components/InstrumentPackages.astro";
import { imageConfig } from "astro:assets";
import FAQs from "../../components/FAQs";
import { instrumentFAQs } from "../../data/instrumentFAQs";
---

<BaseLayout
  pageTitle="Training Courses | Summit Flight Academy"
  pageDescription="Explore a comprehensive range of pilot training courses at Summit Flight Academy. From Private Pilot License (PPL) to Airline and Military programs, discover the perfect training path for your aviation goals. Flexible and accelerated options are available. Train with us and elevate your flight career."
  pageKeywords="pilot training courses, aviation training programs, flight academy programs, PPL courses, Airline pilot training, Military pilot programs, accelerated pilot training, flexible pilot training, flight school courses, certified flight instructor, aviation career paths"
>
  <!-- <PageHeader
    title="How to Become a Private Pilot"
    subtitle="The starting point in all pilot journeys"
    headerImg="private-pilot"
    imgPosition="center"
    imgStartOpacity="50"
    imgEndOpacity="20"
    btnText="Apply Now"
    btnHref="/enrollment"
    target="_blank"
    btnColor="white"
  /> -->

  <header
    class="relative h-screen-3/4 bg-commercial-pilot bg-cover bg-center bg-black flex flex-col items-center justify-center"
  >
    <div
      class="absolute bg-gradient-to-b from-black/40 to-black/10 w-full h-full z-0"
    >
    </div>

    <div
      class="text-white text-center z-10 flex flex-col items-center gap-4 px-5"
    >
      <h1 class="text-5xl font-bold tracking-tighter">
        How to Get an Instrument Rating
      </h1>
      <h2 class="text-3xl tracking-wide">
        Navigate instrument conditions and expand your range
      </h2>
      <a href="#" target="_blank"><button class="btn-red">Apply Now</button></a>
    </div>
  </header>

  <UnderHeader
    title="What is an Instrument Rating?"
    text1="Obtaining an Instrument Rating is a significant milestone in a pilot's journey and allows for more complex flying. At Summit Flight Academy, we understand the importance of this rating and are dedicated to providing comprehensive training and support to help aspiring pilots achieve this goal. With an Instrument Rating, pilots gain the ability to navigate and operate aircraft safely under conditions of reduced visibility and adverse weather, expanding their capabilities and opening up new opportunities in the aviation industry."
  />

  <InstrumentRoadmap />

  <EnrollNowCTA />

  <InstrumentPackages />

  <FAQs faqs={instrumentFAQs} client:visible />

