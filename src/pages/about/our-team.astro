---
import ContactUs from "../../components/ContactUs.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import EnrollNowCTA from "../../components/EnrollNowCTA.astro";
import UnderHeader from "../../components/UnderHeader.astro";
import TermsThatWork from "../../components/TermsThatWork.astro";
import Team from "../../components/Team";
---

<BaseLayout
  pageTitle="Our Team | Summit Flight Academy"
  pageDescription="Meet our expert and caring team ready to take you to new heights. Get to know our leadership and dispatch teams at Summit. See who you’ll be flying with!"
  pageKeywords="Team, staff, Summit, leadership, dispatch, CFII, CFI, pilot, training"
>
  <header
    class="relative h-screen-3/4 bg-commercial-pilot bg-cover bg-center bg-black flex flex-col items-center justify-center"
  >
    <div class="absolute bg-black/50 w-full h-full z-0"></div>
    <div
      class="text-white text-center z-10 flex flex-col items-center gap-4 px-5"
    >
      <h1 class="text-5xl font-bold tracking-tighter">
        The People Behind Summit
      </h1>
      <h2 class="text-3xl tracking-wide">
        Our elite flight instruction team in Lee's Summit, MO
      </h2>
      <a href="#contactUs" class="btn-red">Meet Summit</a>
    </div>
  </header>

  <UnderHeader
    title="Finding Inspiration in Every Flight!"
    text1="Summit Flight was founded in 2022 with the goal of providing a full service, professional flight school at the Lee's Summit Airport.​ Our mission is to provide excellence in flight training, the highest levels of service and the upmost focus on safety and student growth to help each pilot meet their aviation goals!"
  />

  <TermsThatWork />

  <Team client:visible />

  <EnrollNowCTA />

  <ContactUs />
</BaseLayout>
