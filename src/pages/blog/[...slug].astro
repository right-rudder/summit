---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import UnderHeaderVideo from "../../components/UnderHeaderVideo.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<BlogPost {...post.data}>
  <div class="prose w-full max-w-4xl">
    <Content />
  </div>
</BlogPost>
<UnderHeaderVideo title="From First Responder to Instructor Pilot | Summit Flight Academy KS" videoId="HkUJ5JOp_u4" />
