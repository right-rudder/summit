---
import BaseLayout from "../layouts/BaseLayout.astro";
import { PHONE_NUMBER, EMAIL_ADDRESS } from "../consts";
---

<BaseLayout>
  <div class="bg-gray-800 h-28"></div>
  <section
    class="bg-gray-100 py-12 w-full flex flex-col items-center justify-center"
  >
    <!--Container for contents-->
    <div class="text-center lg:w-3/5 md:w-4/5">
      <h1 class="font-bold text-5xl py-10">Thank you for booking with us.</h1>

      <!--Container for check-->
      <div class="my-8 flex flex-row justify-center">
        <!--circle of check-->
        <div class="bg-green-300 rounded-full py-3 px-4 mb-10">
          <!--check itself-->
          <div class="text-green-700 text-7xl">âœ“</div>
        </div>
      </div>

      <p class="px-5 text-lg">
        Thank you for booking a session with <strong
          >Summit Flight Academy</strong
        >. We are looking forward to flying with you soon. We will review your
        message and get back with you within 1-5 business days. <br /><br />
        You can also give us a call at <a
          class="font-medium hover:underline"
          href={`tel:${PHONE_NUMBER}`}>{PHONE_NUMBER}</a
        > or email us at <a
          class="font-medium hover:underline"
          href={`mailto:${EMAIL_ADDRESS}`}>{EMAIL_ADDRESS}</a
        >
      </p>

      <div class="pt-10 flex flex-row justify-center">
        <a href="/">
          <div class="btn-red mb-10 w-52">HOME</div>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
