---
import { Icon } from "astro-icon/components";

const { simulator } = Astro.props;
---

<h3 class="text-3xl font-medium hidden lg:block text-white">
  {simulator.name}
</h3>
<div
  class="flex flex-col p-5 my-3 w-full text-white md:w-2/3 lg:flex-row lg:gap-5 lg:max-w-5xl lg:min-w-[55rem]"
>
  <div class="flex flex-col w-full justify-between">
    <div class="h-full flex flex-col justify-between">
      <div
        class="flex gap-2 bg-gradient-to-r items-center from-gray-700 to-gray-800 text-white justify-between p-2 border-b-4 flex-1"
      >
        <p class="text-sm lg:text-base flex-1">Panels:</p>
        <ul class="flex flex-col flex-[2_2_0%] gap-2">
          {
            simulator.panels.map((panel) => (
              <li class="text-sm lg:text-base text-right leading-none">
                {panel}
              </li>
            ))
          }
        </ul>
      </div>
      <div
        class="flex gap-2 bg-gradient-to-r items-center from-gray-700 to-gray-800 text-white justify-between p-2 border-b-4 flex-1"
      >
        <p class="text-sm lg:text-base flex-1">
          Hours In Simulator Can Be Used As:
        </p>
        <ul class="flex flex-col flex-[2_2_0%] gap-3">
          {
            simulator.hoursInSimulatorCanBeUsedAs.map((item) => (
              <li class="text-sm lg:text-base text-right leading-none">
                {item}
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <a href="/discovery-flight-form" target="_blank" class="w-full">
      <div
        class="btn-red text-sm font-medium lg:mt-0 lg:text-lg lg:font-semibold w-full h-full hover:scale-100 rounded-none"
      >
        Book Now
      </div>
    </a>
  </div>
  <div>
    <img
      src={simulator.image.src}
      class="aspect-square object-cover bg-white w-full lg:w-[40rem]"
      alt={simulator.alt}
    />
    <div
      class="flex items-center gap-2 text-lg bg-gradient-to-r from-gray-800 to-black px-2 py-3 lg:hidden"
    >
      <Icon name="ic:sharp-play-arrow" class="text-3xl" />
      <h3 class="text-lg">{simulator.name}</h3>
    </div>
  </div>
</div>
