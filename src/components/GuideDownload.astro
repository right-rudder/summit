---
import ImageComp from "./ImageComp.astro";
import OpenModalButton from "./OpenModalButton";
const GHL_BOOK_FORM_WEBHOOK_URL = import.meta.env.GHL_BOOK_FORM_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;
---

<section
  class="bg-gradient-to-br from-gray-800 to-black text-white flex justify-center py-12"
>
  <div class="flex flex-col items-center lg:flex-row max-w-7xl py-10">
    <div class="flex flex-col items-center p-5 gap-5 text-center">
      <p class="text-lg">
        Still looking for more information on pilot training?
      </p>
      <h2
        class="text-3xl lg:text-6xl px-4 text-gray-200 font-bold text-center tracking-tight"
      >
        Get Your FREE Quick Start Guide!
      </h2>
      <p class="ext-lg">
        Check out our booklet to learn more about earning your pilot
        certifications.
      </p>
      <OpenModalButton
        webhookUrl={GHL_BOOK_FORM_WEBHOOK_URL}
        apiKey={PORTAL_API_KEY}
        client:visible
      />
    </div>
    <ImageComp
      imagePath="/src/assets/summit.webp"
      imageAlt="Summit Flight Academy Quick Start Guide"
      styles="p-5 h-[250px] md:h-[300px] lg:h-[400px] order-first lg:order-last"
      quality="100"
    />
  </div>
</section>
