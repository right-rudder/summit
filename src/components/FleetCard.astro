---
import { Icon } from "astro-icon/components";

const { plane } = Astro.props;

function camelCaseToTitleCase(str) {
  return str.replace(/([A-Z])/g, " $1").replace(/^./, function (str) {
    return str.toUpperCase();
  });
}
---

<h3 class="text-3xl font-medium hidden lg:block text-black mt-10">
  {plane.name}
</h3>
<div
  class="flex flex-col p-5 my-3 w-full text-white md:w-2/3 lg:flex-row lg:gap-5 lg:max-w-5xl lg:min-w-[55rem]"
>
  <div class="w-full lg:w-[40rem]">
    <div class="aspect-square bg-white w-full h-full">
      <img
        src={plane.image.src}
        class=`object-cover h-full object-${plane.imageAlignment}`
        alt={plane.alt}
      />
    </div>

    <div
      class="flex items-center gap-2 text-lg bg-gradient-to-r from-gray-800 to-black px-2 py-3 lg:hidden"
    >
      <Icon name="ic:sharp-play-arrow" class="text-3xl" />
      <h3 class="text-lg">{plane.name}</h3>
    </div>
  </div>
  <div class="flex flex-col w-full justify-between">
    <div class="h-full flex flex-col justify-between">
      {
        Object.entries(plane.stats).map(([key, value]) => (
          <div class="flex gap-2 bg-gradient-to-r items-center from-gray-700 to-gray-800 justify-between p-2 border-b border-white flex-1">
            <p class="text-sm lg:text-base">{camelCaseToTitleCase(key)}:</p>
            <p class="text-sm lg:text-base text-right">{value}</p>
          </div>
        ))
      }
    </div>
    <a href="/discovery-flight-form" target="_blank" class="w-full">
      <div
        class="btn-red text-sm font-medium lg:mt-0 lg:text-lg lg:font-semibold w-full h-full hover:scale-100 rounded-none"
      >
        Book Now
      </div>
    </a>
  </div>
</div>
