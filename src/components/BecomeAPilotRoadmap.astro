---
import ImageComp from "./ImageComp.astro";

const { data } = Astro.props;
---

<section id="become-a-pilot-road">
  <div class="bg-white py-16 sm:pt-8 sm:pb-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto w-full lg:mx-0">
        <h2 class="xl:text-6xl text-5xl font-bold tracking-tight text-main-red text-center">
          {data.title}
        </h2>
        <p class="mt-4 text-lg leading-8 text-black text-center">
          {data.subTitle}
        </p>
      </div>

      <div>
        {
          data.steps.map((step, index) =>
            index % 2 === 0 ? (
              <div class="my-8 flex flex-wrap justify-center gap-8 lg:gap-0">
                <div class="flex flex-col items-center w-full gap-8 lg:w-1/2 lg:pr-6">
                  <h3 class="text-9xl font-light text-main-red text-center w-full lg:text-left">
                    {(index + 1).toString().padStart(2, "0")}
                  </h3>

                  <div class="text-center lg:text-right">
                    <h3 class="text-3xl font-bold tracking-tight text-main-red mb-2">{step.title}</h3>
                    <p class="text-xl leading-8 text-gray-800" set:html={step.description} />
                  </div>
                </div>
                <div class="flex flex-col justify-center items-center w-full lg:w-1/2">
                  <ImageComp
                    imagePath={step.img.src}
                    imageAlt={step.img.alt}
                    styles={`object-cover rounded w-full max-h-[60vh] lg:h-[576px] ${step.img.objectPosition ? step.img.objectPosition : "object-center"}`}
                  />
                </div>
              </div>
            ) : (
              <div class="my-8 flex flex-wrap justify-center lg:flex-row-reverse gap-8 lg:gap-0">
                <div class="flex flex-col items-center w-full gap-8 lg:w-1/2 lg:pl-6">
                  <h3 class="text-9xl font-light text-main-red text-center w-full lg:text-right">
                    {(index + 1).toString().padStart(2, "0")}
                  </h3>
                  <div class="text-center lg:text-left">
                    <h3 class="text-3xl font-bold tracking-tight text-main-red mb-2">{step.title}</h3>
                    <p class="text-xl leading-8 text-gray-800" set:html={step.description} />
                  </div>
                </div>
                <div class="flex flex-col justify-center items-center w-full lg:w-1/2">
                  <ImageComp
                    imagePath={step.img.src}
                    imageAlt={step.img.alt}
                    styles={`object-cover rounded w-full max-h-[60vh] lg:h-[576px] ${step.img.objectPosition ? step.img.objectPosition : "object-center"}`}
                  />
                </div>
              </div>
            )
          )
        }
      </div>
    </div>
  </div>
</section>
