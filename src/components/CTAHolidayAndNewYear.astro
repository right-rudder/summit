---
import { FaGifts } from "react-icons/fa";
const { ommitActions = false, iconRight = false } = Astro.props;
---

<div class={`bg-white py-8 lg:py-12" : "py-24 lg:py-16"}`}>
  <div class={`flex items-center justify-center gap-9 md:gap-12 flex-wrap ${iconRight ? "flex-row-reverse" : "flex-row"}`}>
    
    <div class="flex items-center justify-center md:w-1/3 lg:w-1/4 px-4 md:px-0">
      <FaGifts className="text-main-red w-[200px] h-auto" />
    </div>

    <div class="md:w-1/2 lg:w-1/3 px-4 md:px-0">
      <h2 class="text-base font-semibold leading-7 text-main-red text-center md:text-left">
        Holiday & New Year Offer
      </h2>
      <p class="mt-3 text-3xl font-bold tracking-tight text-black sm:text-4xl text-center md:text-left">
        Start Training — Get Ground School <span class="whitespace-nowrap">FREE</span>!
      </p>
      <p class="mt-4 text-base leading-7 text-gray-900 text-center md:text-left">
        Enroll or begin your flight training before <strong>February 28</strong> and receive a full Ground School course at no cost — a <strong>$250 value</strong>. Start now and get the foundation you need to fly with confidence.
      </p>

      { !ommitActions && (
        <div class="mt-6 flex flex-col sm:flex-row items-center justify-center md:justify-start gap-3">
          <a href="https://www.flightcircle.com/shop/325431594e72/4000002368" target="_blank" rel="noopener" class="btn-white">
            Request a Discovery Flight
          </a>
          <a href="/enrollment" class="btn-red">
            Enroll Now
          </a>
        </div>
      )}

      <p class="mt-4 text-xs text-gray-500 text-center md:text-left">
        Offer valid for new students who begin training before <strong>February 28</strong>. Terms apply.
      </p>
    </div>

  </div>
</div>
