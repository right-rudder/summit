---
import EnrollmentModalButton from "./enrollmentModalButtom";

const {
  title = "Let's Get Started?",
  subtitle = "Submit your enrollment interest today",
} = Astro.props;
---

<section
  class="flex flex-col items-center bg-cover bg-center bg-[url('/img/enrollment-cta.webp')] text-white relative"
  id="enroll-now-cta"
>
  <div class="absolute bg-gray-900/50 w-full h-full z-0"></div>
  <div class="lg:w-1/2 flex flex-col items-center py-28 lg:py-16 z-10">
    <div
      class="min-h-[360px] max-w-5xl px-5 flex flex-col items-center justify-end"
    >
      <h2 class="text-5xl font-semibold text-center tracking-tight">{title}</h2>
      <h3 class="my-4 font-semibold text-3xl text-center">
        {subtitle}
      </h3>
      <EnrollmentModalButton
        btnStyle={"btn-red"}
        btnText={"Enroll Today"}
        client:visible
      />
    </div>
  </div>
</section>
