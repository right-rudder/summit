---
import EnrollmentModalButton from "./enrollmentModalButtom";
import ImageComp from "./ImageComp.astro";
const GHL_ENROLL_FORM_WEBHOOK_URL = import.meta.env.GHL_ENROLL_FORM_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;

const {
  title = "Let's Get Started?",
  subtitle = "Submit your enrollment interest today",
} = Astro.props;
---

<section
  class="flex flex-col items-center relative overflow-hidden bg-slate-900 text-white"
  id="enroll-now-cta"
>
  <div class="absolute bg-slate-900/50 inset-0 z-10"></div>
  <ImageComp
    imagePath="/src/assets/Summit-flight-academy-happy-pilots.jpg"
    imageAlt="Summit Flight Academy student in front of Piper PA-28 Cherokee"
    styles="absolute object-cover w-full h-full -z-0 animate-slow-zoom"
  />
  <div class="lg:w-1/2 flex flex-col items-center py-28 lg:py-16 z-10">
    <div
      class="min-h-[360px] max-w-5xl px-5 flex flex-col items-center justify-center"
    >
      <h2
        class="text-6xl text-gray-100 font-bold text-center tracking-tight drop-shadow-md"
      >
        {title}
      </h2>
      <h3
        class="mt-3 font-normal text-xl md:text-3xl tracking-tight text-center drop-shadow-md"
      >
        {subtitle}
      </h3>
      <EnrollmentModalButton
        btnStyle={"btn-red mt-10 w-full lg:w-1/2"}
        btnText={"Enroll Today"}
        webhookUrl={GHL_ENROLL_FORM_WEBHOOK_URL}
        apiKey={PORTAL_API_KEY}
        client:visible
      />
    </div>
  </div>
</section>
