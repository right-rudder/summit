---
const { title, text1, text2, text3 } = Astro.props;
---

<section id={title} class="bg-gray-800">
  <div class="lg:py-16 py-24">
    <div
      class="flex items-center justify-center gap-9 md:gap-12 flex-wrap"
    >
      <div class="md:w-1/4">
        <h2
          class="mt-2 text-4xl font-bold tracking-tight leading-tighter text-gray-100 md:text-5xl lg:text-6xl text-center md:text-right capitalize px-3 md:px-0"
        >
          {title}
        </h2>
      </div>
      <div class="md:w-1/3 font-extralight">
        <p class="text-base leading-tight text-white text-center md:text-left px-9 lg:px-0">
          {text1}
        </p>
        <p class=`${text2 ? "block" : "hidden"} mt-4 text-base leading-tight text-white text-center md:text-left px-9 lg:px-0`>
          {text2}
        </p>
        <p class=`${text3 ? "block" : "hidden"} mt-4 text-base leading-tight text-white text-center md:text-left px-9 lg:px-0`>
          {text3}
        </p>
      </div>
    </div>
  </div>
  
</section>
