---
const { title, content } = Astro.props;
---

<div class="mt-8 bg-gray-200 rounded-lg p-4 lg:p-12">
  <h5 class="text-xl font-bold text-center">{title}</h5>
  <ul
    role="list"
    class="mt-6 px-7 lg:px-0 space-y-3 text-lg text-left leading-6 text-gray-900"
  >
    {
      content.allInclude.map((feature) => (
        <li class="flex gap-x-3" id={feature}>
          <svg
            class="h-6 w-5 flex-none text-red-600"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
              clip-rule="evenodd"
            />
          </svg>
          <span>{feature}</span>
        </li>
      ))
    }
  </ul>
</div>
