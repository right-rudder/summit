---
import CardSimple from "./CardSimple.astro";

const example = {
  upperTitle: "Explore our flight training options",
  title: "Start Today",
  description:
    "If you've thought about becoming a pilot, now is the perfect time to get started. Summit Flight Academy is your place to start training and get your pilot certificate and ratings.",
  cards: [
    {
      title: "Take a Discovery Flight",
      descriptions: [
        "The best way to see if flying is right for you is to take a discovery flight...",
      ],
      btns: [],
    },
    {
      title: "With Bullets",
      descriptions: ["Example with bullets."],
      bullets: [{ title: "Bullet 1" }, { title: "Bullet 2" }],
      btns: [],
    },
  ],
};

const { city, content = example } = Astro.props;
---

<div class="bg-white lg:py-16 py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-base font-semibold leading-7 text-red-600">
        {content.upperTitle}
      </h2>
      <p
        class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
      >
        {city ? `Start Flight Lessons near ${city} Today` : content.title}
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        {content.description}
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-3xl sm:mt-20 lg:max-w-none">
      <div class="flex flex-wrap gap-8 items-center w-full">
        {
          content.cards.map((card) => (
            <div class="bg-gray-100 hover:bg-gray-200 transition duration-200 p-12 rounded-lg text-center align-middle pb-24 w-full flex-1 min-w-[400px]">
              <dt class="text-xl font-semibold leading-7 text-gray-900">
                {card.title}
              </dt>

              {/* ✅ Generic Descriptions */}
              {card.descriptions &&
                card.descriptions.map((text) => (
                  <dd class="mt-4 text-base leading-7 text-gray-600">{text}</dd>
                ))}

              {/* ✅ Standards */}
              {card.standards &&
                card.standards.map((text) => (
                  <dd class="mt-4 text-base leading-7 text-gray-600">{text}</dd>
                ))}

              {/* ✅ Common Errors */}
              {card.commonErrors &&
                card.commonErrors.map((text) => (
                  <dd class="mt-4 text-base leading-7 text-gray-600">{text}</dd>
                ))}

              {/* ✅ Private Standards */}
              {card.privateStandards &&
                card.privateStandards.map((text) => (
                  <dd class="mt-4 text-base leading-7 text-gray-600">{text}</dd>
                ))}

              {/* ✅ Commercial Standards */}
              {card.commercialStandards &&
                card.commercialStandards.map((text) => (
                  <dd class="mt-4 text-base leading-7 text-gray-600">{text}</dd>
                ))}

              {/* ✅ Bullets (uses CardSimple) */}
              {card.bullets && (
                <CardSimple title="Key Points" content={card.bullets} />
              )}

              {/* ✅ Buttons */}
              {card.btns &&
                card.btns.map((btn) => (
                  <div class="mt-9 flex justify-center">
                    <a href={btn.link} target="_blank" class="btn-red">
                      {btn.title}
                    </a>
                  </div>
                ))}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
